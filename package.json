{
  "name": "flow",
  "displayName": "Flow - Tab Manager",
  "version": "1.2.7",
  "description": "A new way to manage chrome tabs and windows easily.",
  "author": "Mahdi Mallaee",
  "packageManager": "npm@9.1.3",
  "scripts": {
    "dev": "plasmo dev --hoist",
    "build": "plasmo build --hoist",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.6.1",
    "framer-motion": "^10.12.21",
    "plasmo": "0.74.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.10.1",
    "react-router-dom": "^6.15.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "^0.0.266",
    "@types/node": "20.2.4",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "prettier": "2.8.8",
    "typescript": "5.0.4"
  },
  "manifest": {
    "permissions": [
      "storage",
      "tabs",
      "tabGroups",
      "unlimitedStorage",
      "favicon",
      "contextMenus"
    ],
    "optional_permissions": [
      "history",
      "downloads",
      "system.display"
    ]
  }
}